<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

	<me.brendanweinstein.views.CardNumEditText
		style="@style/PKAddCardField"
		android:id="@+id/credit_card_no"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_gravity="center_vertical"
		android:hint="1234 5678 9012 3456"
		android:textColorHint="#ffdedede"
		android:textSize="@dimen/pk_input_field_text_size"
		android:maxLength="19" />

	<me.brendanweinstein.views.InterceptEditText
		style="@style/PKAddCardField"
		android:id="@+id/last_four_digits"
		android:editable="false"
		android:focusable="false"
		android:inputType="none"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_gravity="center_vertical"
		android:maxLength="19"
		android:textSize="@dimen/pk_input_field_text_size"
		android:visibility="gone" />

</merge>