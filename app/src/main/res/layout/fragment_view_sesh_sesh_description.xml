<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.seshtutoring.seshapp.view.fragments.ViewSeshFragments.ViewSeshSeshDescriptionFragment">

    <!--<RelativeLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

    <com.seshtutoring.seshapp.view.components.SeshInformationLabel
        android:id="@+id/class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        custom:informationLabelText="class"
        custom:informationLabelIcon="@drawable/book" />

    <com.seshtutoring.seshapp.view.components.SeshInformationLabel
        android:id="@+id/subject_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/class_label"
        custom:informationLabelText="hello"
        custom:informationLabelIcon="@drawable/subject" />

    <com.seshtutoring.seshapp.view.components.SeshInformationLabel
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/subject_label"
        custom:informationLabelText="hello"
        custom:informationLabelIcon="@drawable/clock_orange"/>

    <com.seshtutoring.seshapp.view.components.SeshInformationLabel
        android:id="@+id/location_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/time_label"
        custom:informationLabelText="hello"
        custom:informationLabelIcon="@drawable/location"/>

    <!--</RelativeLayout>-->

</RelativeLayout>
