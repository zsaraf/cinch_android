<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/settings_row_title"
        android:textColor="@color/seshcharcoal"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/settings_explain_title"
        android:textColor="@color/seshlightgray"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/settings_header_title"
        android:textColor="@color/seshorange"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:paddingBottom="4dp"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"/>

    <TextView
        android:id="@+id/settings_right_title"
        android:textColor="@color/seshlightgray"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="8dp"/>

</RelativeLayout>