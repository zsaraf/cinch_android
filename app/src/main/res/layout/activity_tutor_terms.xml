<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seshtutoring.seshapp.view.TutorTermsActivity"
    android:layout_marginTop="@dimen/action_bar_height">

    <com.seshtutoring.seshapp.view.components.SeshActivityIndicator
        android:id="@+id/sesh_activity_indicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:alpha="0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.seshtutoring.seshapp.view.components.SeshButton
                android:id="@+id/accept_button"
                android:layout_below="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:text="I ACCEPT" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
