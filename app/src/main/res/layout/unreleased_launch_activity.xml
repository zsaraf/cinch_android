<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image">
        <com.seshtutoring.seshapp.view.components.TextureVideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/office_time_lapse" />
        <FrameLayout
            android:id="@+id/videoKeyframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/keyframe"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.4"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_area">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Hold Tight!"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/countupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="0"
            android:gravity="center_horizontal"
            android:textSize="120sp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/title"
            />
        <TextView
            android:id="@+id/daysUntilLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Days Until Android Launch"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_marginTop="205dp"
            />
        <com.seshtutoring.seshapp.view.components.SeshButton
            android:id="@+id/motivateButton"
            custom:buttonType="gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:text="Motivate the Team"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/motivateButton"
            android:layout_below="@id/daysUntilLabel">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/unreleased_launch_thank_you"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/content_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/fourth_fragment_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>