<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/view_pager_dots"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_profile_picture"
            app:border_width="2dp"
            app:border_color="@color/seshorange"
            android:paddingTop="20dp"
            android:layout_below="@id/view_pager_dots"/>
    </RelativeLayout>
    <View
        android:id="@+id/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone"
        android:alpha="0"/>
    <android.support.v7.widget.CardView
        android:id="@+id/add_photo_options_card_view"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        card_view:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.seshtutoring.seshapp.view.components.SeshButton
                android:id="@+id/take_photo_button"
                android:text="Take photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.seshtutoring.seshapp.view.components.SeshButton
                android:id="@+id/choose_from_gallery_button"
                android:text="Choose from Gallery"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/request_flow_overlay"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/request_flow_overlay_background" >
        <com.seshtutoring.seshapp.view.components.SeshActivityIndicator
            android:id="@+id/request_activity_indicator"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <com.seshtutoring.seshapp.view.components.SeshAnimatedCheckmark
            android:id="@+id/animated_check_mark"
            android:layout_centerInParent="true"
            custom:labelText="Cashed Out!"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </RelativeLayout>
</FrameLayout>