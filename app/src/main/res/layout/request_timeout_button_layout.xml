<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/timeout_button_background"
    android:background="@drawable/request_timeout_button_unselected">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/num_hours_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="@color/seshlightgray"
            android:layout_marginBottom="-2dp"
            android:padding="0dp"/>
        <TextView
            android:id="@+id/hours_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hour"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="@color/seshlightgray"
            android:layout_below="@id/num_hours_label"
            android:layout_marginTop="0dp"
            android:padding="0dp"/>
    </RelativeLayout>
</RelativeLayout>