<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/seshcharcoal">
    <LinearLayout
        android:id="@+id/contents"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS 107"
            android:textSize="14sp"
            android:textColor="@color/seshorange"
            android:id="@+id/open_request_list_row_class"/>
        <com.seshtutoring.seshapp.view.components.AnimatedEllipsisTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="requesting"
            android:textSize="14sp"
            android:textColor="@color/seshlightgray"
            android:id="@+id/open_request_list_row_requesting"/>
    </LinearLayout>
</RelativeLayout>