<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/seshcharcoal">
    <RelativeLayout
        android:id="@+id/contents"
        android:background="@color/seshcharcoal"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_profile_picture"
            app:border_width="1dp"
            app:border_color="@color/seshorange"/>
        <RelativeLayout
            android:id="@+id/alert_badge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:background="@drawable/alert_badge">
            <TextView
                android:id="@+id/alert_badge_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="1"
                android:textSize="8dp"
                android:gravity="center"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/profile_image"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS 107"
                android:textSize="14dp"
                android:textColor="@color/seshorange"
                android:id="@+id/open_sesh_list_row_class"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now"
                android:textSize="14dp"
                android:textColor="@color/seshorange"
                android:id="@+id/open_sesh_list_row_time"/>
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/open_sesh_list_row_status_icon"/>
    </RelativeLayout>

</RelativeLayout>