<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/update_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Android is Here!"
        android:textColor="@color/seshorange"
        android:gravity="center"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/high_five_label"
        android:layout_below="@id/update_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="High Five!"
        android:textColor="@color/seshlightgray"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/androidrobots"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/androidrobot_highfive"/>
    <TextView
        android:id="@+id/version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="180dp"
        android:text="Version 1.0"
        android:textColor="@color/seshorange"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_below="@id/version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:textSize="16sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/update_app_dialog_content"
        android:gravity="center"/>
</RelativeLayout>