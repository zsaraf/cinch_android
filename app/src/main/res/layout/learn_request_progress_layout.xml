<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageButton
        android:id="@+id/class_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:src="@drawable/book_gray"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageButton
        android:id="@+id/assignment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:src="@drawable/assignment_gray"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageButton
        android:id="@+id/number_students_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:src="@drawable/hashtag_gray"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageButton
        android:id="@+id/duration_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:background="@null"
        android:layout_gravity="center_vertical"
        android:src="@drawable/clock_gray"/>
</LinearLayout>