<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_overlay">
    <LinearLayout
        android:id="@+id/progress_bar"
        android:orientation="horizontal"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/schedule_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar_white"/>
            <ImageButton
                android:id="@+id/schedule_icon_clickable"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:alpha="0"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar_unfilled"/>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/class_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/book_white"/>
            <ImageButton
                android:id="@+id/class_icon_clickable"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:alpha="0"
                android:layout_gravity="center_vertical"
                android:background="@drawable/book_orange"/>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/assignment_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/assignment_white"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/assignment_icon_clickable"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:alpha="0"
                android:background="@drawable/assignment_orange"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/number_students_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/hashtag_white"/>
            <ImageButton
                android:id="@+id/number_students_icon_clickable"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:alpha="0"
                android:layout_gravity="center_vertical"
                android:background="@drawable/hashtag_orange"/>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/duration_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clock_white"/>
            <ImageButton
                android:id="@+id/duration_icon_clickable"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:alpha="0"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clock_orange"/>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/confirm_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/confirm"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/confirm_icon_clickable"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:alpha="0"
                android:background="@drawable/confirm"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/progress_underline_container"
        android:layout_below="@id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <View
            android:id="@+id/progress_underline"
            android:layout_centerVertical="true"
            android:background="@color/seshorange"
            android:layout_width="20dp"
            android:layout_height="2dp"/>
    </RelativeLayout>
</RelativeLayout>