<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingRight="35dp"
    android:paddingLeft="35dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/class_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/book_white"/>
        <ImageButton
            android:id="@+id/class_icon_clickable"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:alpha="0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/book"/>
    </RelativeLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/assignment_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/assignment"
            android:layout_gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/assignment_icon_clickable"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:alpha="0"
            android:background="@drawable/assignment_big"
            android:layout_gravity="center_vertical"/>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/number_students_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hashtag"/>
        <ImageButton
            android:id="@+id/number_students_icon_clickable"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:alpha="0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hashtag_orange"/>
    </RelativeLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/duration_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/clock"/>
        <ImageButton
            android:id="@+id/duration_icon_clickable"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:alpha="0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/clock_orange"/>
    </RelativeLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/confirm_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/confirm"
            android:layout_gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/confirm_icon_clickable"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:alpha="0"
            android:background="@drawable/confirm"
            android:layout_gravity="center_vertical"/>
    </RelativeLayout>
</LinearLayout>