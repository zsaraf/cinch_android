<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:capitalize="characters"
        android:textSize="18sp"
        android:text="You got the Job!"
        android:layout_centerHorizontal="true"
        android:inputType="none"
        android:gravity="center_horizontal"
        android:textColor="@color/seshorange"
        android:layout_alignParentTop="true"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_below="@id/dialog_title"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        app:border_width="2dp"
        app:border_color="@color/seshorange" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/student_tutor_name"
        android:layout_below="@id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:capitalize="characters"
        android:inputType="none"
        android:textSize="16sp"
        android:text="John Doe"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/seshorange"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_text"
        android:layout_below="@id/student_tutor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:capitalize="characters"
        android:inputType="none"
        android:padding="25dp"
        android:textSize="16sp"
        android:text="@string/sesh_created_tutor_dialog_text"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/seshlightgray"/>
</RelativeLayout>