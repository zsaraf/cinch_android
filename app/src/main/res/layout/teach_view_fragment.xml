<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/view_classes_button"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_button_unpressed">

        <ImageView
            android:id="@+id/tutor_classes_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="0"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/seshorange"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp" />

        <TextView
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classes_button_text"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/seshorange"
            android:inputType="textFilter"
            android:layout_marginLeft="8dp"
            android:paddingLeft="52dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tutor_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_classes_button"
        android:background="@color/white">
    </RelativeLayout>

</RelativeLayout>